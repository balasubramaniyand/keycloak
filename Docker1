version: "3"

services:
  postgres:
    image: postgres:16
    ports:
      - "5431:5432"
    volumes:
      - pg_data:/var/lib/postgresql/data
    environment:
      POSTGRES_DB: keycloak
      POSTGRES_USER: lopex
      POSTGRES_PASSWORD: password

  keycloak:
    image: quay.io/keycloak/keycloak:latest
    environment:
      - KEYCLOAK_FRONTEND_URL=http://13.126.219.64:8008/auth
      - PROXY_ADDRESS_FORWARDING=true
      - DB_VENDOR=postgres
      - DB_ADDR=postgres
      - DB_DATABASE=keycloak
      - DB_USER=lopex
      - DB_SCHEMA=public
      - DB_PASSWORD=password
      - KEYCLOAK_USER=admin
      - KEYCLOAK_PASSWORD=admin
      - KEYCLOAK_CORS=true
      - QUARKUS_HTTP_INSECURE_REQUESTS=true  # Disables SSL requirement for insecure requests
    ports:
      - "8008:8080"
    depends_on:
      - postgres
    entrypoint: ["/opt/keycloak/bin/kc.sh", "start", "--dev"]  # Start in development mode

volumes:
  pg_data:
